<div class="form">
  <fieldset>
    <legend><%= t 'login.title' %></legend>
    <% form_tag do %>
      <p>
        <label for="user_name"><%= t 'login.user_name' %></label>
        <%= text_field_tag :user_name, params[:user_name] %>
      </p>
      <p>
        <label for="password"><%= t 'login.password' %></label>
        <%= password_field_tag :password, params[:password] %>
      </p>
      <p>
        <span class="submit"><%= submit_tag t( 'login.button' ) %></span>
      </p>
    <% end %>
  </fieldset>
</div>