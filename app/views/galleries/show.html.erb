<div class="form">
<fieldset>
<legend><%= t('info') %> - Gallery</legend>

<br />
<table class="intro">
	<tr>
		<td>
			<%= @gallery.description %>
			<% if permitted_to? :edit, @gallery %>
				<%= link_to t('edit'), edit_gallery_path(@gallery), :class=>"link" %>
			<% end %>
		</td>
	</tr>
</table>
<p>

<%= @gallery.photos.map{|e| link_to( image_tag( e.photo.url(:small)), e) }%>

<div class="links">
  <% if permitted_to? :show, @gallery.event %>
  	<%= link_to t('events.title'), @gallery.event, :class => :link %>
  <% end %>
  <% if permitted_to? :new, Photo.new %>
  	| <%= link_to t('photos.add'), new_photo_path( :gallery_id => @gallery.id ), :class => :link %>
  <% end %>
  <% if permitted_to? :index, Gallery.new %>
  	| <%= link_to t('galleries.title'), galleries_path, :class=>"link" %>
  <% end %>
</div>

</fieldset>
</div>