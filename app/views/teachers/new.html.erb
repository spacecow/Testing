<div class="form">
<%= error_messages_for :person %>
<fieldset>
<legend>新しい講師</legend>
<% form_for( @person ) do |f| %>
	<p>
	  <label for="user_name">ユーザー名</label>
	  <%= f.text_field :user_name %>
	</p>
	<p>
	  <label for="password">パスワード</label>
	  <%= f.text_field :password %>
	</p>
	<p>
	  <label for="name">名前*</label>
	  <%= f.text_field :family_name, :size=>20 %>
	  <%= f.text_field :first_name, :size=>20 %>
	</p>
	<p>
	  <label for="name_kana">名前 (フリガナ)*</label>
	  <%= f.text_field :family_name_kana, :size=>20 %>
	  <%= f.text_field :first_name_kana, :size=>20 %>
	</p>
	<p>
	  <label for="gender">性別*</label>
	  <table><tr>
	    <td bgcolor="#AAAAFF"><%= f.radio_button :gender, 1 %>男性</td>
	    <td bgcolor="#FFAAAA"><%= f.radio_button :gender, 2 %>女性</td>
	  </tr></table>
	</p>
	<p>
	  <label for="mobile_phone">携帯電話番号</label>
	  <%= f.text_field :mobile_phone, :size=>20 %>
	</p>
	<p>
	  <label for="home_phone">固定電話番号</label>
	  <%= f.text_field :home_phone, :size=>20 %>
	</p>
	<p>
	  <label for="mail_address_mobile">携帯電話用アドレス*</label>
	  <%= f.text_field :mail_address_mobile %>
	</p>
	<p>
	  <label for="mail_address_pc">ＰＣ用アドレス</label>
	  <%= f.text_field :mail_address_pc %>
	</p>
	<p>
	  <label for="address1">住所</label>
	  <%= f.text_field :address1 %>
	</p>
	<p>
	  <label for="address2">二番目の住所</label>
	  <%= f.text_field :address2 %>
	</p>
	<p>
	  <label for="ritei">利用停止</label>
	  <table><tr>
	    <td bgcolor="#AAAAFF"><%= f.radio_button :ritei, false %>OFF</td>
	    <td bgcolor="#FFAAAA"><%= f.radio_button :ritei, true %>ON</td>
	  </tr></table>
	</p>
	<p>
	  <label for="inactive">退職</label>
	  <table><tr>
	    <td bgcolor="#AAAAFF"><%= f.radio_button :inactive, false %>OFF</td>
	    <td bgcolor="#FFAAAA"><%= f.radio_button :inactive, true %>ON</td>
	  </tr></table>
	</p>	
	<p>
	  <label for="note">備考</label>
	  <%= f.text_area :note, :rows=>8 %>
	</p>
	<p>
	  <%= f.hidden_field :status, :value => 1 %> 
	  <%= f.submit "Create", :class=>"submit" %>
	</p>
	
	<%= link_to 'Back', teachers_path %>
<% end %>
</fieldset>
</div>