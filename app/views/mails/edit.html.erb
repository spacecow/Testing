<div class="form">
<%= error_messages_for :mail %>

<fieldset class="form">
<legend class="form"><%= t('mails.editing') %></legend>

<%- semantic_form_for @mail do |f| -%>
	<%= render :partial => "form", :locals => { :f=>f, :label_text=>t('update') } %>
<%- end -%>

<div class="links">
	  <%= link_to t('show'), @mail, :class=>"link" %> |
	  <%= link_to t('view_all'), mails_path, :class=>"link" %>
</div>

</fieldset>
</div>