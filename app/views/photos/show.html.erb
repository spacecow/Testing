<div class="form">
<fieldset>
<legend><%= t('photo') %></legend>

<%= link_to( image_tag( @photo.photo.url(:large)), @next ) %><br />
<i><%= h @photo.caption %></i>

<div class="links">
		<p>
			<% if permitted_to? :edit, @photo %>
				<%= link_to t('edit'), edit_photo_path(@photo), :class=>"link" %> |
			<% end %>
			<% if permitted_to? :delete, @photo %>
				<%= link_to t('delete'), @photo, :confirm => 'Are you sure?', :method => :delete, :class=>"link" %> |
			<% end %>
			<% if permitted_to? :show, @photo.gallery %>
				<%= link_to t('gallery'), @photo.gallery, :class=>"link" %>
			<% end %>
		</p>
</div>

</fieldset>
</div>