<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :url %><br />
  <%= f.text_field :url %>
</p>
<p>
  <%= f.label :contents %><br />
  <%= f.text_area :contents %>
</p>
<p>
<% Tag.all.each do |tag| %>
  <%= check_box_tag "doc[tag_ids][]", tag.id, @doc.tags.include?(tag) %>
  <%= tag.name %>
</p>
<% end %>
<p>
  <%= f.submit label_text %>
</p>