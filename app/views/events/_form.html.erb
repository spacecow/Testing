<% f.inputs do %>
	<%= f.input :title, :label => t( 'title' ) %>
	<%= f.input :date, :label => t( 'event_date' ), :as => :string, :hint => "Ex. 2009-12-19" %>
	<%= f.input :description, :label => t( 'description' ), :input_html => { :rows => 8 } %>
<% end %>
<% f.buttons do %>
	<%= f.commit_button label_text %>
<% end %>