<div id="list">
<h1><%= t('events.title') %></h1>
<div class="intro">
	<%= @setting.events_description( japanese? ) %>
	<% if can? :edit, @setting %>
		<%= link_to t('edit'), edit_setting_path( @setting ), :class => :grid %>
	<% end %>
</div>


<table cellpadding="1" cellspacing="1" id="events">
	<tr>
			<th><%= t('event') %></th>		
			<th><%= t('date_and_time') %></th>
			<th><%= t('place') %></th>
			<th><%= t('event_cost') %></th>		
	</tr>
	<% for event in @events %>
		<tr class="<%= cycle( 'list-line-odd', 'list-line-even' ) %>" id="event_<%= event.id %>">
      	<td><%= event.title( japanese? )%></td>
      	<td><%=h event.date %></td>
      	<td><%=h event.place_to_s %></td>
      	<td><%=h event.cost_to_s %></td>
  		<td>
    			<% if can? :show, event %>
    				<%= link_to t('show'), event %>
    			<% end %>
    			<% if can? :edit, event %>
    				<%= link_to t('edit'), edit_event_path(event) %>
    			<% end %>
    			<% if can? :destroy, event %>
    				<%= link_to t('delete'), event, :confirm => 'Are you sure?', :method => :delete %>
    			<% end %>
			</td>    	
		</tr>
	<% end %>
</table>

<div class="links">
<% if can? :new, Event.new %>	
	<p><%= link_to t('events.new'), new_event_path, :class=>"link" %></p>
<% end %>
</div>

</div>