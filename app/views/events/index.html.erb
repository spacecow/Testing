<div id="list">
<h1><%= t('events.title') %></h1>

<table cellpadding="2" cellspacing="1" id="events">
	<tr>
			<th class="list-topics"><%= t('title') %></th>		
			<th class="list-topics"><%= t('event_date') %></th>		
			<th class="list-topics"><%= t('description') %></th>		
	</tr>
	<% for event in @events %>
		<tr class="<%= cycle( 'list-line-odd', 'list-line-even' ) %>" >
      	<td><%=h event.title %></td>
      	<td><%=h event.date %></td>
      	<td><%=h event.description %></td>
  		<td>
    			<% if permitted_to? :show, event %>
    				<%= link_to t('show'), event, :class=>"link" %>
    			<% end %>
    			<% if permitted_to? :edit, event %>
    				<%= link_to t('edit'), edit_event_path(event), :class=>"link" %>
    			<% end %>
    			<% if permitted_to? :destroy, event %>
    				<%= link_to t('delete'), event, :confirm => 'Are you sure?', :method => :delete, :class=>"link" %>
    			<% end %>
			</td>    	
		</tr>
	<% end %>
</table>

<div class="links">
<% if permitted_to? :new, Event.new %>	
	<p><%= link_to t('events.new'), new_event_path, :class=>"link" %></p>
<% end %>
</div>
</div>
