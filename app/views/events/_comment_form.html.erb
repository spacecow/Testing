<% if permitted_to? :create, @comment %>
	<%- semantic_form_for @comment, :url=>comments_path do |f| -%>
		<div id="new_comment_form">
      <%= f.hidden_field :event_id, :value=>@event.id %>
  		<%= f.hidden_field :user_id, :value => current_user2.id %>
      <% f.inputs do %>
      	<%= f.input :comment %>
      <% end %>
      <div id="add_button_container">
        <%= f.submit t(:add,:object=>t(:comment)) %>
      </div>
      <div class="clear"></div>
		</div>
	<%- end -%>
<% else %>
  <br />
<% end %>