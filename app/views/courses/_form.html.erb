<p>
  <label for="name">名前</label>
  <%= f.text_field :name, :size=>20 %>
</p>
<p>
  <%= f.label :inactive %>
  <table><tr>
    <td bgcolor="#AAAAFF"><%= f.radio_button :inactive, false %>OFF</td>
    <td bgcolor="#FFAAAA"><%= f.radio_button :inactive, true %>ON</td>
  </tr></table>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description, :rows=>8 %>
</p>
<p>
  <label for="note">備考</label>
  <%= f.text_area :note, :rows=>8 %>
</p>
<p>
  <%= f.submit label_text, :class=>"submit" %>
</p>