<% f.inputs do %>
	<%= f.input :username, :label => t( :user_name ) %>
	<%= f.input :email, :label => t( :email ) %>
	<%= f.input :password, :label => t( :password ) %>
	<%= f.input :password_confirmation, :label => t( :password_confirmation ) %>
<p>
  <%= f.label :role %><br />
  <%= f.collection_select :role, User::ROLES, :to_s, :titleize %>
</p>
<% end %>
<% f.buttons do %>
	<%= f.commit_button label_text %>
<% end %>

