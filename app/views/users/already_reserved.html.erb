<div class="show">
<fieldset class="show">
<legend><%= @user.name %></legend>
<% if !@user.role? :student %>
  <%= t("message.no_student",:name=>@user.name) %>
<% else %>
<%= render "reserve_top_links" %>
<fieldset class="intro">
<legend><%= t(:already_reserved) %></legend>
<div id="already_reserved">
<% form_for :menu, :url=>already_reserved_user_path(@user),:html=>{:method=>'get'} do |f| %>
  <div id="select_menu">
    <label for="menu_date"><%= t(:klass_date) %>: </label>
      <%= select_tag :menu_year,  options_for_select( @years,  @menu_year.to_i ) %>
      <%= select_tag :menu_month, options_for_select( @months, @menu_month.to_i ) %>
      <%= select_tag :menu_day,   options_for_select( @days,   @menu_day.to_i ) %>
      <span id="day"></span>
      <%= f.submit "Go!"%>
  </div>
<% end %>
<% unless @attendances.empty? %>
  <ul>
    <% @attendances.each do |attendance| %>
      <% if attendance.cancel %>
        <% if can? :edit, attendance %>
          <li class="cancel"><%= attendance.klass.name %></li>
        <% end %>
      <% else %>
        <li><%= attendance.klass.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
</div>
</fieldset>
<% end %>

</fieldset>
</div>
