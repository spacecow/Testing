<div class="form">
<fieldset class="form">
<legend class="form"><%= t('change_password') %></legend>

<div class="intro">
	<%= t('message.change_password', :object => @user.name ) %>
</div>

<%- semantic_form_for @user, :url => update_password_users_path, :method => :put do |f| -%>
	<%= hidden_field_tag :token, @token %>
	<% f.inputs do %>
		<%= f.input :password, :label => t( :password ) %>
		<%= f.input :password_confirmation, :label => t( :password_confirmation ) %>
	<% end %>
	<fieldset class="buttons">
		<%= submit_tag t( :change ), :name => 'user[change_password]' %>
	</fieldset>
<%- end -%>

<div class="links">
</div>

</fieldset>
</div>