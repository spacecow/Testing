<div class="form">
<%= error_messages_for :user %>

<fieldset>
<legend><%= t('users.editing') %></legend>

<% semantic_form_for @user do |f| %>
	<% f.inputs do %>
		<%= f.input :name, :label => t( :name ) %>
	<% if japanese? %>
		<%= f.input :name_hurigana, :label => t( 'name_hurigana' ) %>
	<% else %>
		<%= f.input :nationality, :label => t( 'nationality' ) %>
	<% end %>	
		<%= f.input :male, :label => t( 'gender' ), :as => :radio, :collection => [[t('male'), true],[t('female'), false]] %>
		<%= f.input :age, :label => t( 'age' ), :as => :select, :collection => japanese? ? Registrant::AGE_JA : Registrant::AGE_EN, :required => false %>
		<%= f.input :tel, :label => t( 'tel' ), :required => false %>
		<%= f.input :email, :label => t( :email ) %>
		<%= f.input :occupation, :label => t( 'occupation' ), :as => :select, :collection => japanese? ? Registrant::OCCUPATIONS_JA : Registrant::OCCUPATIONS_EN %>
		<% if current_user2 %>
			<%= f.input :role, :label => t( :role ), :input_html => { :disabled => true } %>
		<% else %>
			<%= f.input :role, :as => :hidden, :value => 'registrant' %>
		<% end %>
		<hr>
		<%= f.input :username, :label => t( :user_name ), :input_html => { :disabled => true } %>
		<%= f.input :password, :label => t( :password ) %>
		<%= f.input :password_confirmation, :label => t( :password_confirmation ) %>
	<% end %>
	<% if japanese? %>
		<%= submit_tag t( 'create' ), :name => 'user[japanese]', :class => 'submit' %>
	<% else %>
		<%= submit_tag t( 'create' ), :name => 'user[english]', :class => 'submit' %>
	<% end %>
<% end %>

<div class="links">
</div>

</fieldset>
</div>