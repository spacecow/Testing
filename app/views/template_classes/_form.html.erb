<% f.inputs do %>
	<%= f.input :title, :label => t( 'title' ), :required => false %>
	<%= f.input :course, :label => t( 'course' ) %>
	<%= f.input :classroom, :label => t( 'classroom' ), :required => false %>
	<%= f.input :capacity, :label => t( 'capacity' ) %>
	<%= f.input :day, :label => t( 'day' ), :as => :select, :collection => @days %>
	<%= f.input :start_time_string, :label => t( 'start_time' ), :input_html => { :class => 'numeric' }, :hint => "#{t :ex} 17:50" %>
	<%= f.input :end_time_string, :label => t( 'end_time' ), :input_html => { :class => 'numeric' }, :hint => "#{t :ex} 18:40" %>
	<%= f.input :mail_sending, :label => t( :mail_sending ), :required => false %>
	<div class="horizontal"><%= f.input :inactive, :label => t( :inactive ), :as => :radio %></div>
	<%= f.input :description, :label => t( :description ), :required => false %>
	<%= f.input :note, :label => t( :note ), :required => false %>
<% end %>
<% f.buttons do %>
	<%= f.commit_button label_text %>
<% end %>