<div class="form">

<fieldset class="form">
<legend class="form"><%= t( 'template_klasses.new' ) %></legend>

<%- semantic_form_for @template_class  do |f| -%>
  <%= render :partial=>"form", :locals=>{ :f=>f, :label_text => t( 'create' )} %>
<%- end -%>

<div id="links">
	<% if can? :index, TemplateClass %>
		<%= link_to t(:list,:object=>t('template_klasses.title')), template_classes_path( :template_day=>@template_class.day ) %>
	<% end %>
</div>
</fieldset>
</div>