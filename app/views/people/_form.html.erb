
<p>
  <%= f.label :user_name, t('user_name') %>
  <%= f.text_field :user_name %>
</p>
<p>
  <%= f.label :password, t('password') %>
  <%= f.text_field :password %>
</p>
<p>
  <%= f.label :name, t('name') %>*
  <%= f.text_field :family_name, :size=>13 %>
  <%= f.text_field :first_name, :size=>12 %>
</p>
<p>
  <%= f.label :name_kana, t('name_kana') %>*
  <%= f.text_field :family_name_kana, :size=>13 %>
  <%= f.text_field :first_name_kana, :size=>12 %>
</p>
<p>
  <label for="gender"><%= t('gender') %>*</label>
  <table><tr>
    <td bgcolor="#AAAAFF"><%= f.radio_button :gender, 1 %><%= t('male') %></td>
    <td bgcolor="#FFAAAA"><%= f.radio_button :gender, 2 %><%= t('female') %></td>
  </tr></table>
</p>
<p>
  <%= f.label :mobile_phone, t('mobile_phone') %>
  <%= f.text_field :mobile_phone, :size=>20 %>
</p>
<p>
  <%= f.label :home_phone, t('home_phone') %>
  <%= f.text_field :home_phone, :size=>20 %>
</p>
<p>
  <%= f.label :mail_address_mobile, t('mail_address_mobile') %>*
  <%= f.text_field :mail_address_mobile %>
</p>
<p>
  <%= f.label :mail_address_pc, t('mail_address_pc') %>
  <%= f.text_field :mail_address_pc %>
</p>
<p>
  <%= f.label :address1, t('address') %>
  <%= f.text_field :address1 %>
</p>
<p>
  <%= f.label :address2, t('address2') %>
  <%= f.text_field :address2 %>
</p>
<p>
  <%= f.label :ritei, t('suspended') %>
  <table><tr>
    <td bgcolor="#AAAAFF"><%= f.radio_button :ritei, false %>OFF</td>
    <td bgcolor="#FFAAAA"><%= f.radio_button :ritei, true %>ON</td>
  </tr></table>
</p>
<p>
  <%= f.label :inactive, status=="講師" ? t('inactive_teacher') : t('inactive_student') %>
  <table><tr>
    <td bgcolor="#AAAAFF"><%= f.radio_button :inactive, false %>OFF</td>
    <td bgcolor="#FFAAAA"><%= f.radio_button :inactive, true %>ON</td>
  </tr></table>
</p>	
<p>
  <%= f.label :note, t('note') %>
  <%= f.text_area :note, :rows=>8, :cols=>27 %>
</p>
<p>
  <%= f.label :language, t('language') %>
  <%= f.select :language, [['Japanese', 'ja'], ['English', 'en']] %>
</p>
<p>
  <% if status=="受講生" %>
    <%= f.hidden_field :linked_student %>
  <% elsif status=="講師" %>
    <%= f.hidden_field :linked_teacher %>
  <% end %>
  <%= hidden_field_tag :status, status %>
  <%= f.submit label_text, :class=>"submit" %>
</p>