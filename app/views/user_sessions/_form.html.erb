<% f.inputs do %>
	<%= f.input :username, :label => t( :user_name ), :required => false %>
	<%= f.input :password, :label => t( :password ), :required => false %>
<% end %>
<% f.buttons do %>
	<%= f.commit_button label_text %><i><%= link_to t('message.forgotten_password'), new_reset_password_path %></i>
<% end %>