<% title "Words" %>

<table>
  <tr>
    <th>Japanese</th>
    <th>Reading</th>
    <th>Meaning</th>
  </tr>
  <% for word in @words %>
    <tr>
      <td><%=h word.japanese %></td>
      <td><%=h word.reading %></td>
      <td><%=h word.meaning %></td>
      <td><%= link_to "Show", word %></td>
      <td><%= link_to "Edit", edit_word_path(word) %></td>
      <td><%= link_to "Destroy", word, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Word", new_word_path %></p>
