<h1><%= t('info') %> - <%= t('schedule') %></h1>

<p>
  <strong><%= t('unit') %>:</strong>
  <%=h @unit.unit %>
</p>
<p>
  <strong><%= t('schedule') %>:</strong>
  <%= link_to h( @unit.schedule.title ), @unit.schedule %>
</p>
<p>
  <strong><%= t('title') %>:</strong>
  <%=h @unit.title %>
</p>
<p>
  <strong><%= t('page') %>:</strong>
  <%=h @unit.page %>
</p>
<p>
  <strong><%= t('grammar_unit') %>:</strong>
  <%=h @unit.grammar_unit %>
</p>
<p>
  <strong><%= t('description') %>:</strong>
  <%=h @unit.description %>
</p>
<p>
  <strong><%= t('note') %>:</strong>
  <%=h @unit.note %>
</p>

<div class="links">
  <%= link_to t('edit'), edit_unit_path(@unit), :class=>"link" %> |
  <%= link_to t('destroy'), @unit, :confirm => 'Are you sure?', :method => :delete, :class=>"link" %> |
  <%= link_to t('view_all'), units_path, :class=>"link" %>
</div>
