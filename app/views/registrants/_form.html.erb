<% f.inputs do %>
	<%= f.input :occupation, :label => t( 'occupation' ), :as => :select, :collection => english? ? Registrant::OCCUPATIONS_EN : Registrant::OCCUPATIONS_JA %>
	<%= f.input :name, :label => t( 'name' ) %>
	<%= f.input :name_hurigana, :label => t( 'name_hurigana' ) %>
	<%= f.input :male, :label => t( 'gender' ), :as => :radio, :collection => [[t('male'), true],[t('female'), false]] %>
	<%= f.input :age, :label => t( 'age' ), :as => :select, :collection => english? ? Registrant::AGE_EN : Registrant::AGE_JA %>
	<%= f.input :tel, :label => t( 'tel' ) %>
	<%= f.input :email, :label => t( 'email' ) %>
	
	<%= f.input :event_id, :as => :hidden, :value => @event.id %>	
	<%= f.input :user_id, :as => :hidden, :value => current_user2.id %>
	<%= f.inputs :name, :for => @user, :name => "User" %>
	<%= f.input :note, :label => t( 'note' ), :input_html => { :rows => 8 }, :required => false %>	
<% end %>
<%= submit_tag 'Resubmit', :name => 'foo_bar[force_submit]' %>