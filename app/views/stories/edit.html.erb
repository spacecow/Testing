<div class="form">
<fieldset class="form">
<legend class="form"><%= t( :editing, :object=>t(:story)) %></legend>

<div class="intro">
	<%= t('message.asterisk') %>
</div>

<% semantic_form_for @story do |f| %>
  <%= render "form", :f=>f, :label_text => t(:update) %>
<% end %>

<div id="links">
	<%= link_to t(:show), @story if can? :show, @story %>
	<%= link_to t(:destroy), @story, :confirm => t(:sure?), :method => :delete if can? :destroy, @story %>
	<%= link_to t(:list,:object=>t(:stories)), stories_path if can? :index, Klass %>
</div>

</fieldset>
</div>