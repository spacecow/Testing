<div class="form">
<%= error_messages_for :todo %>

<fieldset>
<legend><%= t(:new, :object => t(:todo)) %></legend>

<%- semantic_form_for @todo do |f| -%>
	<%= render :partial => "form", :locals => { :f=>f, :label_text=>t('create') } %>
<%- end -%>

<div class="links">
	<% if permitted_to? :index, @todo %>
		<%= link_to t('todos.title'), todos_path %>
	<% end %>
</div>

</fieldset>
</div>